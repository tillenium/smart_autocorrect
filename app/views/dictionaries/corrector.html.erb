<br/>
<textarea class="form-control" id="input" rows="3"></textarea>
<br/>
<button type="submit" id="submit-button" class="btn btn-default" style="align:center">Check</button>
<br/><br/><br/>
<textarea class="form-control" id="output" rows="3"></textarea>
<br/><br/>
<%= link_to 'add_new_word', '/dictionaries/new' %>

<script>
    $( "#submit-button" ).click(function() {
	$.ajax({
	    type: "POST",
	    url: '/dictionaries/check_words',
	    data: {'input':  $('#input').val() },
	    dataType: "json",
	    complete: function(data) {
		$('#output').val(data.responseJSON["output"]);
	    }
	});
  });
</script>
